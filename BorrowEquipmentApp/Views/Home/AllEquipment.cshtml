@model IEnumerable<BorrowEquipmentApp.Models.Equipment>

@{
    ViewData["Title"] = "All Equipment";
}

<h1>All Equipment</h1>

<table class="table">
    <thead>
        <tr>
            <th>Equipment Type</th>
            <th>Description</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var equipment in Model)
        {
            <tr>
                <td>@equipment.Type</td>
                <td>@equipment.Description</td>
                <td>@(equipment.IsAvailable ? "Available" : "Not Available")</td>
            </tr>
        }
    </tbody>
</table>
