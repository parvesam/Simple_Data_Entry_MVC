@{
    ViewData["Title"] = "Request Confirmation";
}

<div class="container text-center my-5">
    <h1 class="display-4">Your Request Has Been Submitted</h1>
    <p class="lead">Someone from the IT department will be in touch soon.</p>
    
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-4">Back to Home</a>
</div>

<!-- Additional Styling -->
<style>
    h1 {
        font-weight: bold;
        color: #0d6efd;
    }

    p {
        color: #555;
        font-size: 1.2rem;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1.25rem;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
