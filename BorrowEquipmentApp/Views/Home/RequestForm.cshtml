@model BorrowEquipmentApp.Models.RequestModel

<h2>Request IT Equipment</h2>

<form asp-action="SubmitRequest" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" pattern="\d{3}-\d{3}-\d{4}" required />
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role">
            <option>Student</option>
            <option>Professor</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="EquipmentType"></label>
        <select asp-for="EquipmentType">
            <option>Laptop</option>
            <option>Phone</option>
            <option>Tablet</option>
            <option>Another</option>
        </select>
    </div>
     <div class="form-group">
        <label asp-for="RequestDetails"></label>
        <textarea asp-for="RequestDetails" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" type="number" min="1" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>
