@model IEnumerable<BorrowEquipmentApp.Models.RequestModel>

<h2>Admin: Equipment Requests</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Equipment Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <td>@request.Name</td>
                <td>@request.Role</td>
                <td>@request.EquipmentType</td>
                <td>
                    <button class="btn btn-success">Accept</button>
                    <button class="btn btn-danger">Deny</button>
                </td>
            </tr>
        }
    </tbody>
</table>
